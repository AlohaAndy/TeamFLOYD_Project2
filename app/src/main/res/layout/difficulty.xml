<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:backgroundTint="#00ffffff"
    android:background="#a11d07a6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Difficulty Options"
        android:id="@+id/scrambleView"
        android:textSize="32dp"
        android:textColor="#a11d07a6"
        android:layout_below="@+id/unscrambleView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy"
        android:id="@+id/button"
        android:background="#00ffffff"
        android:layout_below="@+id/scrambleView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:onClick="clickEasy"
        android:textColor="#a11d07a6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="42dp"
        android:background="#00ffffff"
        android:onClick="clickMedium"
        android:textColor="#a11d07a6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hard"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="57dp"
        android:background="#00ffffff"
        android:onClick="clickHard"
        android:textColor="#a11d07a6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Floyd Anagram"
        android:id="@+id/unscrambleView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="44dp"
        android:textColor="#a11d07a6"
        android:textStyle="bold" />

</RelativeLayout>
