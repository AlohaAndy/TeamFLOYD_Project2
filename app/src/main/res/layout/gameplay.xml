<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/rLayout"
    android:background="#a11d07a6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/scrambleView"
        android:textSize="32dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:background="#8cf3f7"
        android:width="1000dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unscrambleView"
        android:textSize="32sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp"
        android:layout_alignEnd="@+id/scrambleView"
        android:background="#4ea2f9"
        android:textAlignment="center"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/buttonClear"
        android:layout_marginTop="138dp"
        android:layout_alignWithParentIfMissing="false"
        android:clickable="true"
        android:onClick="clear"
        android:background="#6bb7ff"
        android:textColor="#b2fff8"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/buttonCheck"
        android:layout_alignWithParentIfMissing="true"
        android:clickable="true"
        android:layout_alignTop="@+id/buttonClear"
        android:layout_centerHorizontal="true"
        android:onClick="check"
        android:background="#6bb7ff"
        android:textColor="#b2fff8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:id="@+id/buttonSkip"
        android:layout_alignWithParentIfMissing="true"
        android:clickable="true"
        android:layout_alignTop="@+id/buttonCheck"
        android:layout_alignEnd="@+id/unscrambleView"
        android:onClick="skip"
        android:background="#6bb7ff"
        android:textColor="#b2fff8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/anagrams"
        android:textColor="#8cf3f7"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/buttonCheck" />

</RelativeLayout>
