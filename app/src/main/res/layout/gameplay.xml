<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:backgroundTint="#00ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/scrambleView"
        android:textSize="32dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:background="#8cf3f7"
        android:width="1000dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unscramble here!"
        android:id="@+id/unscrambleView"
        android:textSize="32sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp"
        android:layout_alignEnd="@+id/scrambleView"
        android:background="#f3f931"
        android:textAlignment="center"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/buttonClear"
        android:layout_marginTop="36dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/unscrambleView"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:onClick="clear" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/buttonCheck"
        android:layout_alignWithParentIfMissing="true"
        android:clickable="true"
        android:layout_alignTop="@+id/buttonClear"
        android:layout_centerHorizontal="true"
        android:onClick="check" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:id="@+id/buttonSkip"
        android:layout_alignWithParentIfMissing="true"
        android:clickable="true"
        android:layout_alignTop="@+id/buttonCheck"
        android:layout_alignEnd="@+id/unscrambleView"
        android:onClick="skip" />

</RelativeLayout>
